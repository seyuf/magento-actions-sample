<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="Aheadworks_Pquestion::css/style.css"/>
        <css src="css/aheadworks-pq.css" />
    </head>
    <body>
        <referenceBlock name="aw_pq_ajax_container">
            <arguments>
                <argument name="include_headline" xsi:type="boolean">false</argument>
                <argument name="is_collapsible" xsi:type="boolean">true</argument>
                <argument name="collapsible_widget_options" xsi:type="array">
                    <item name="mediaQueryScope" xsi:type="string">(max-width: 767px)</item>
                </argument>
                <argument name="sort_order" xsi:type="string">60</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="aw_pq_question_list">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.icon.thumb-up">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/thumb_up.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__helpfulness-thumb aw-pq-list__helpfulness-thumb--up</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.icon.thumb-down">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/thumb_down.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__helpfulness-thumb aw-pq-list__helpfulness-thumb--down</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.next-answer.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__next-answer-button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.add-answer.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__add-answer-button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.add-question.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__add-question-button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_question_list.next-question.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-list__next-question-button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="aw_pq_ask_question_form">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_ask_question_form.send-question.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-form__button-question-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="aw_pq_add_answer_form">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="aw_pq_ask_question_form.send-answer.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">aw-pq-form__send-answer-button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
