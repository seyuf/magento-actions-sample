        </var>
        <var name="product_carousel">
            <var name="additional_css_classes"></var>
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var name="additional_css_classes"></var>
                        <var name="path">images/icons/icon_arrow-left.svg</var>
