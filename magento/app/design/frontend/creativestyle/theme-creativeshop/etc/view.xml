    <vars module="Magento_Theme">
        <var name="toolbar">
            <var name="pagination">
                <!-- You can decide about pagination mode (text input / bullet points) in admin panel (Stores -> Configuration -> MAGESUITE -> Pagination). Define 'catalog_category_view' to use input mode or remove it to use bullet points on category pages. You can decide on this mode 'per page' by manipulating other handlers in this way. -->
                <var name="display">true</var>
                <var name="prefix_label">Page:</var>
                <var name="display_prev_next_buttons_if_disabled">true</var>
                <var name="display_prev_next_labels">false</var>
                <!-- if last_page_separator will be left empty, it will display as '/'. The reason is that we don't want to put it as translateable string -->
                <var name="last_page_separator"></var>
                <var name="icons">
                    <var name="previous_page">images/icons/toolbar/pagination-previous-page.svg</var>
                    <var name="next_page">images/icons/toolbar/pagination-next-page.svg</var>
                </var>
            </var>
        </var>
        <var name="breadcrumbs">
            <var name="custom_separator">
                <!-- You can decide if customized separator, for eg. SVG icon should be used. -->
                <var name="display">false</var>
                <var name="icon">images/icons/icon_arrow-right.svg</var>
            </var>
        </var>
    </vars>

    <vars module="Magento_Catalog">
        <!-- configures toolbar elements (except of pagination, which is in Magento_Theme vars as it's global component) -->
        <var name="toolbar">
            <var name="amount">
                <var name="display">false</var>
            </var>
            <var name="sorter">
                <var name="display">true</var>
                <var name="label">Sort by:</var>
                <var name="display_sort_direction_label">false</var>
                <!-- Currently we use MageSuite_Sorting that changed logic of sorting dropdown and no icons are displayed at all. If you want them back you have to uninstall Sorting extention -->
                <var name="icons">
                    <var name="order_asc">images/icons/toolbar/asc-order-icon.svg</var>
                    <var name="order_desc">images/icons/toolbar/desc-order-icon.svg</var>
                </var>
            </var>
            <var name="limiter">
                <var name="display">true</var>
                <var name="prefix_label">Display:</var>
                <var name="suffix_label"></var>
                <var name="as_select">false</var>
            </var>
            <var name="viewmode_switcher">
                <var name="display">true</var>
                <var name="prefix_label"></var>
                <var name="display_modes_icons">true</var>
                <var name="display_modes_labels">false</var>
            </var>
        </var>

        <!-- Defines if Adding to cart should be done with AJAX where it can -->
        <var name="ajax_addtocart">
            <var name="enabled">true</var>
            <var name="css_classes">
                <var name="default_button">cs-addtocart__button</var>
                <var name="default_label">cs-addtocart__button-label</var>
                <var name="processing_label"></var>
                <var name="success_overlay">cs-addtocart__feedback-bg</var>
                <var name="success_label">cs-addtocart__success-label</var>
                <var name="fail_label">cs-addtocart__fail-label</var>
            </var>
            <var name="labels">
                <var name="default">Add to Cart</var>
                <var name="processing"></var>
                <var name="success">Thank you!</var>
                <var name="fail">Something went wrong</var>
            </var>
            <var name="icons">
                <var name="default">
                    <var name="path">images/icons/addtocart/icon-addtocart.svg</var>
                    <var name="css_class">cs-addtocart__button-icon</var>
                    <var name="inlined">true</var>
                </var>
                <var name="configure">
                    <var name="path">images/icons/addtocart/icon-configure.svg</var>
                    <var name="css_class">cs-addtocart__configure-icon</var>
                    <var name="inlined">true</var>
                    <var name="lazy_loaded">true</var>
                </var>
                <var name="success">
                    <var name="path">images/icons/addtocart/icon-success.svg</var>
                    <var name="css_class">cs-addtocart__success-icon</var>
                    <var name="inlined">true</var>
                    <var name="lazy_loaded">true</var>
                </var>
                <var name="fail">
                    <var name="path">images/icons/addtocart/icon-fail.svg</var>
                    <var name="css_class">cs-addtocart__fail-icon</var>
                    <var name="inlined">true</var>
                    <var name="lazy_loaded">true</var>
                </var>
            </var>
        </var>

        <!-- Defines Icons for STOCK indicator (refers to PDP only). Had to be implemented here because ever type of product has its own definition pointing to the same template. Leave `path` empty to remove the icon completely. -->
        <var name="stock_icons">
            <var name="display">true</var>
            <var name="in_stock">
                <var name="icon_url">images/icons/stock/in-stock.svg</var>
                <var name="css_class">cs-buybox__stock-icon cs-buybox__stock-icon--available</var>
                <var name="inlined">true</var>
            </var>
            <var name="out_of_stock">
                <var name="icon_url">images/icons/stock/out-of-stock.svg</var>
                <var name="css_class">cs-buybox__stock-icon cs-buybox__stock-icon--unavailable</var>
                <var name="inlined">true</var>
            </var>
        </var>

        <!-- Gallery theme settings. Start. To check other options go to etc/view.xml in theme-blank -->
        <var name="gallery">
            <var name="maxheight">500px</var> <!-- Maximum height of the preview block in pixels or percent. Probably the same as product_page_image_medium height-->
            <var name="navarrows">false</var> <!-- Turn on/off on the thumbs navigation sides arrows(true/false) -->
            <var name="transition">
                <var name="duration">250</var> <!-- Sets transition duration in ms -->
            </var>
            <var name="fullscreen">
                <var name="transition">
                    <var name="duration">250</var> <!-- Sets transition duration in ms -->
                </var>
            </var>
        </var>
        <!-- end. Gallery theme settings -->
    </vars>

